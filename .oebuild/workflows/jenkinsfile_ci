    post {
        always {
            dir('/home/jenkins/agent/embedded-ci'){
                script{
                    withCredentials([
                        string(credentialsId: "${giteeId}", variable: 'GITEETOKEN')
                    ]){
                        def chks = ""
                        for (int i = 0; i < STAGES_RES.size(); ++i) {
                            chks = "${chks} -chk ${STAGES_RES[i]}"
                        }
                        sh """
                        python3 main.py comment \
                             -m ci \
                             -o $repoNamespace \
                             -p $repoName \
                             -b $ciBranch \
                             -gt $GITEETOKEN \
                             $chks
                        """
                    }
                }
            }
        }
    }
